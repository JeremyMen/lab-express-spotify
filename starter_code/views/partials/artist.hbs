<div class="col-sm-3 mt-4 mb-4">
  <div class="cards-container card">

    {{#if this.images.[0].url}}
      <img class="card-img-top" src="{{this.images.[0].url}}" alt="Card image cap">
    {{else}}
      <img class="card-img-top" src="../../images/no-album.png" alt="Card image cap">
    {{/if}}

    <div class="card-body d-flex flex-column align-items-center text-center">
      <h6 class="card-title">{{this.name}}</h6>
      <a href="/albums/{{this.id}}" class="btn btn-danger">views album</a>
    </div>
  </div>
</div>  
